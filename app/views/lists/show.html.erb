<div class="container">
  <div class=" row justify-content-between p-5">
    <h2><%= @list.name %></h2>
    <p> <%= link_to 'add a new movie', new_list_bookmark_path(@list) %></p>
  </div>
</div>

<div class="container">
  <% @list.movies.each do |movie| %>
    <div class="d-flex justify-content-center m-4">
        <div class="col-12 col-lg-9">
          <div class="card bg-light p-5">
            <p style="text-align: center;"><%= movie.title %></p>
            <div class="card-product">
              <%= image_tag movie.poster_url, alt: movie.title, class: 'movie-img w-25'%>
              <div class="card-movie-infos p-3">
                <p><%= movie.overview %></p>
              </div>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>



<p class="p-5"><%= link_to 'back', lists_path %></p>
